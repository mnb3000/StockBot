{
  "include": ["src/**/*"],
  "compilerOptions": {
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "strict": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "src",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
